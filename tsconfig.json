{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "types": ["bun-types"],
    "resolveJsonModule": true,
    "paths": {
      "@ai-assistant/core": ["./packages/core/src"],
      "@ai-assistant/db": ["./packages/db/src"],
      "@ai-assistant/skill-runtime": ["./packages/skill-runtime/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

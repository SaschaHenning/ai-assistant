{
  "name": "ai-assistant",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "skills/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "bun run --filter @ai-assistant/db generate",
    "db:migrate": "bun run --filter @ai-assistant/db migrate"
  },
  "dependencies": {
    "cron-parser": "^5.5.0",
    "drizzle-orm": "^0.38.0",
    "zod": "^3.24.0"
  },
  "packageManager": "bun@1.3.9",
  "devDependencies": {
    "turbo": "^2.8.9",
    "typescript": "^5.7.0"
  }
}
